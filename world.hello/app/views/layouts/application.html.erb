<head>
  <title>Hello World</title>
  
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="Yet another microblogging client.">
  <meta name="author" content="hello@danielrmz.com">
  <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">

  <link href='http://fonts.googleapis.com/css?family=Open+Sans:300,400' rel='stylesheet' type='text/css'>

  <%= include_stylesheets :common %>
  <%= yield :include_styles %>
  <%= csrf_meta_tag %>
  <script type="text/javascript">var World = World || {}; World.Config = <%= raw @config.to_json %></script>
</head>

<body id="<%= @current_controller %>" class="hw-container">
	<div class="<%= @current_action %>">
		<% if user_signed_in? %>
		<div class="hw-menubar">
			<ul>
				<li><a class="home" href="/">Home</a></li>
				<li><a class="post" href="javascript:World.Utils.CreatePost();">Post</a></li>
				<!-- 
				<li><a class="mentions" href="#">Mentions</a></li>
				<li><a class="retweets" href="#">Retweets</a></li>
				<li><a class="favorites" href="#">Favorites</a></li>
				<li><a class="messages" href="#">Messages</a></li> -->
				<li><a class="settings" href="#">Settings</a></li>
			</ul>
		</div>
		<% end %>
	
		<div class="main">
			<%= yield %>	
		</div>

	</div>

<%= include_javascripts :common %>
<%= yield :include_scripts %>
<script type="text/javascript">
	$(function(){
		var message = $(".alert.alert-message span.message").text();
		if(message != "") {
			$(".alert.alert-message").show();
		}
	});
</script>
</body>
</html>
