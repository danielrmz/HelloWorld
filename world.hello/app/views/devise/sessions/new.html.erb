<% content_for :include_styles do %>
	<%= include_stylesheets :auth %>	
<% end %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "hw-panel"}) do |f| %>
  <h2>Login to the <i>World</i></h2>
  
  <div class="fields">
  
	  <p>
	  	<span><%= f.label :email %></span>
	  	<%= f.email_field :email %>
	  </p>
	
	  <p>
	  	<span><%= f.label :password %></span>
	  	<%= f.password_field :password %>
	  </p>
  
  </div>
  <div class="footer">
	  <div class="left services">
	  	<%= link_to image_tag("srv_tw_login.png"), user_omniauth_authorize_path(:twitter) %>
		<% if devise_mapping.rememberable? -%> 
		<!-- <br />
		    <span class="rememberme"><%= f.check_box :remember_me %> <%= f.label :remember_me %></span> -->
		<% end -%>
	  </div>
	 	  
  	  <%= f.submit "Login", :class => 'btn'   %>
  </div>
<% end %>

